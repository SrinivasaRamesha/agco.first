							</ScrollContainer>
							<ScrollContainer id="BGS" horizontal="false" vertical="true" height="100%">
								<uitable:Table rows="{forecastModel>/BSavings}" selectionMode="Single" rowSelectionChange="onSavingsRow" selectionBehavior="Row"
									visibleRowCount="6" class="marginBottom sapUiMediumMarginBegin sapUiMediumMarginEnd tableSoCreate" visible="false" id="SavingsTableId">
									<uitable:extension>
										<Bar class="barHeader">
											<contentLeft>
												<SearchField/>
											</contentLeft>
											<contentRight>
												<Button icon="sap-icon://arrow-bottom" text="Download to Excel" class="downloadButtonClass" iconFirst="true" press="onDataExport"/>
											</contentRight>
										</Bar>
									</uitable:extension>
									<uitable:columns>
										<uitable:Column width="11em" resizable="false">
											<Label text="{i18n>factory}"/>
											<uitable:template>
												<Text text="{forecastModel>factory}"/>
											</uitable:template>
										</uitable:Column>
										<uitable:Column width="11em" resizable="false">
											<Label text="{i18n>commDirectory}"/>
											<uitable:template>
												<Text text="{forecastModel>commDirectory}"/>
											</uitable:template>
										</uitable:Column>
										<uitable:Column width="11em" resizable="false">
											<Label text="{i18n>stdSpend}"/>
											<uitable:template>
												<Text text="{forecastModel>stdSpend}" maxLines="1"/>
											</uitable:template>
										</uitable:Column>
										<uitable:Column width="11em" resizable="false">
											<Label text="{i18n>projects%}"/>
											<uitable:template>
												<Text text="{forecastModel>projects%}" maxLines="1"/>
											</uitable:template>
										</uitable:Column>
										<uitable:Column width="11em" resizable="false">
											<Label text="{i18n>projects}"/>
											<uitable:template>
												<Text text="{forecastModel>projects}" maxLines="1"/>
											</uitable:template>
										</uitable:Column>
										<uitable:Column width="11em">
											<Label text="{i18n>tasks%}"/>
											<uitable:template>
												<Text text="{forecastModel>tasks%}" maxLines="1"/>
											</uitable:template>
										</uitable:Column>
										<uitable:Column width="11em" resizable="false">
											<Label text="{i18n>tasks}"/>
											<uitable:template>
												<Text text="{forecastModel>tasks}" maxLines="1"/>
											</uitable:template>
										</uitable:Column>
										<uitable:Column width="11em" resizable="false">
											<Label text="{i18n>totalSavings}"/>
											<uitable:template>
												<Text text="{forecastModel>totalSavings}" maxLines="1"/>
											</uitable:template>
										</uitable:Column>
									</uitable:columns>
								</uitable:Table>
								<!--Budgeting savings 2nd screen-->
								<ScrollContainer id="SecondSavingsTableId">
									<SegmentedButton id="item" selectionChange="onSavingsSegButton" class="downloadButtonClass">
										<items>
											<SegmentedButtonItem text="2018" class="downloadButtonClass" id="seg2018Savings"/>
											<SegmentedButtonItem text="2019" class="downloadButtonClass" id="seg2019Savings"/>
										</items>
									</SegmentedButton>
									<uitable:Table rows="{oSegmentModel>/BSavings}" selectionMode="Single" rowSelectionChange="onItemsSelectionChange" visibleRowCount="3"
										class="marginBottom sapUiMediumMarginBegin sapUiMediumMarginEnd tableSoCreate">
										<uitable:extension>
											<Bar class="barHeader">
												<contentLeft></contentLeft>
